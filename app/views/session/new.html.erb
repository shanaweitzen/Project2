  <!-- Lost Password & Log In -->
<div class="login_panel">
  <div class="row">
  <div class="large-4 columns">
    <h2>Lost password?</h2>
    <br>
    <p id="lost_password">
      Simply leave the password field blank, click the Log In button, and we'll send you a coded link via email allowing you to reset your password.
    </p>
    <br>
  </div>
  
  <div class="large-4 columns">
    <p>Log In</p>  
    <form action="/login" method="POST"> 
      <div class="row">                 
        <div class="large-12 large-centered columns">
          <input type="text" id="email" name="email" placeholder="Email address" class="large-12 columns clear">
        </div>
      </div>
        <div class="row">
          <div class="large-12 large-centered columns">
            <input type="password" id="password" name="password" placeholder="Password" class="large-12 columns clear">&nbsp;
          </div>
      </div>
        <div class="row">
          <div class="large-6 large-centered columns">
          <button id ="toggle-password-field" class="small button alert"> Show Password </button>
          </div>
        </div>
          <div class="row">
            <div class="large-4 large-centered columns">
              <input type="submit" value="Log In" class="small button">
            </div>  
          </div> 
          <br>
  </div>
  </div>
</div>  
